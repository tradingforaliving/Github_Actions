# you can run multiple jobs in a workflow
# by default jobs run in paralell. If you want to run them sequentially, you need to use: needs:
# since jobs are executed on different runners, if you want to share data use upload/download actions

name: Generate ASCII Artwork

on:
    push

jobs:
    build_job_1:
        runs-on: ubuntu-latest
        steps:

        - name: Install Cowsay
          run: sudo apt-get install cowsay -y

        - name: Execute Cowsay CMD
          run: cowsay -f dragon "i am a DRAGON!!!" >> dragon.txt

          # upload the file to Github
        - name: Upload dragon.txt
          uses: actions/upload-artifact@v4
          with:
            name: dragonfile
            path: dragon.txt


    test_job_2:
        needs: build_job_1 # will be executed after build_job_1 is successfully done
        runs-on: ubuntu-latest # this is a different machine, each job runs on a different machine
        steps: 

          # download file to runner
        - name: Download dragon.txt
          uses: actions/download-artifact@v4
          with:
            name: dragonfile
        
        - name: test that the file exists
          run: grep -i "dragon" dragon.txt

    deploy_job_3:
        needs: test_job_2 # will be executed after build_job_2 is successfully done
        runs-on: ubuntu-latest
        steps:

        # download file to runner
        - name: Download dragon.txt
          uses: actions/download-artifact@v4
          with:
            name: dragonfile

        - name: Reading file
          run: cat dragon.txt
          
        - name: Deploy
          run: echo Deploying....