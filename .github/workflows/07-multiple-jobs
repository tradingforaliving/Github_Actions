# you can run multiple jobs in a workflow

name: Generate ASCII Artwork

on:
    push

jobs:
    build_job_1:
        runs-on: ubuntu-latest
        steps:

        - name: Install Cowsay
          run: sudo apt-get install cowsay -y

        - name: Execute Cowsay CMD
          run: cowsay -f dragon "i am a DRAGON!!!" >> dragon.txt

        - name: sleep for 30 seconds
          run: sleep 30


    test_job_2:
        runs-on: ubuntu-latest # this is a different machine, each job runs on a different machine
        steps: 

        - name: sleep for 10 seconds
          run: sleep 10
        
        - name: test that the file exists
          run: grep -i "dragon" dragon.txt

    deploy_job_3:
        runs-on: ubuntu-latest
        steps:

        - name: Reading file
          run: cat dragon.txt
          
        - name: Deploy
          run: echo Deploying....

# why does it fail?